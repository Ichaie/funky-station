<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'printing-device-ui-title'}"
               MinWidth="250">
    <BoxContainer Orientation="Vertical" VerticalExpand="True" HorizontalExpand="True">
        <Control HorizontalExpand="True" MinHeight="20" />
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Label Text="{Loc 'printing-device-ui-template'}" />
            <Control MinWidth="4" />
            <OptionButton Name="TemplateSelector" HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Label Text="{Loc 'printing-device-ui-paper-type'}" />
            <Control MinWidth="4" />
            <OptionButton Name="PaperTypeSelector" HorizontalExpand="True" />
        </BoxContainer>
        <Control HorizontalExpand="True" MinHeight="20" />
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <!--  populated by template data by code  -->
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Button Name="PrintButton"
                    Text="{Loc 'fax-machine-ui-send-button'}"
                    HorizontalExpand="True"
                    Disabled="True" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>